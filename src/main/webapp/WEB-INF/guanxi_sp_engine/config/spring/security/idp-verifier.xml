<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                          http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="idpVerifier"
        class="org.guanxi.sp.engine.security.shibboleth.IdPVerifier"
        init-method="init">
    <!-- The localised messages -->
    <property name="messages" ref="messageSource"/>
    <!-- The error page to use -->
    <property name="errorView"><value>message.gxEngine</value></property>
    <property name="errorViewErrorVar"><value>error</value></property>
    <property name="errorViewDisplayVar"><value>message</value></property>
    <property name="errorViewSimpleVar"><value>nice</value></property>
  </bean>
  
</beans>